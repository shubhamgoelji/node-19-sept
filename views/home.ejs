<%- include('./base/header.ejs')%>
  <div class="container">
    <div class="alert bg-success my-3">
      <h4 class ="text-center" style="color:white"> Add New Student</h4>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <form action = '/add/student' method ="post">
          <div>
            <label class ="form-label">Roll No</label>
            <input type="text" class="form-control" name="rollNo" >
          </div>
          <div>
            <label class ="form-label">First Name</label>
            <input type="text" class="form-control" name="firstName" >
          </div>
          <div>
            <label class ="form-label">Last Name</label>
            <input type="text" class="form-control" name="lastName" >
          </div>
          <div>
            <label class ="form-label">Father Name</label>
            <input type="text" class="form-control" name="fatherName" >
          </div>
          <div>
            <label class ="form-label">Adhar Card No</label>
            <input type="text" class="form-control" name="adharCardNo" >
          </div>
          <div>
            <label class ="form-label">Mobile No</label>
            <input type="text" class="form-control" name="mobileNo" >
          </div>
          <input type="submit" value ="ADD student" class="btn btn-warning w-100">
        </form>
      </div>
      <div class="col"></div>
    </div>
  </div>
  <%- include('./base/footer.ejs')%>
